.list__header
  .input-field.col.2
    %input#search.validate{placeholder: "Search lyrics & more", type: "text"}
  %a LYRIC
  .links
    .links__btn
      - if user_signed_in?
        =link_to "LOGOUT", destroy_user_session_path, method: :delete
        .links__icon
          = link_to edit_user_path(current_user) do
            = image_tag "iri.jpg", height: '41px', width: '41px', class: 'links__icon__image'
      - else
        =link_to "SIGNUP",new_user_registration_path, method: :get
        =link_to "SIGNIN",new_user_session_path,method: :get

.list__navi-menu
  .list__navi-menu__item
    =link_to do
      %a FEATURED 
    =link_to do
      %a CHARTS
    =link_to do
      %a VIDEOS
